#: import ViewPopup components.viewpopup

<StringItem>:
  height: 36
  size_hint_y: None
  BoxLayout:
    orientation: "horizontal"
    Button:
      size_hint_x: None
      width: self.height
      font_name: "fonts/Font Awesome 6 Free-Solid-900.otf"
      font_size: 21
      text: "\uf129"
#      on_release: Factory.Wifi().open()
    Label:
      size_hint_x: 0.7
      text: root.name
    TextInput:
      size_hint_x: None
      width: 250
      multiline: False
      text: root.value
      on_text_validate: root.value = self.text

<NumberItem>:
  value: 0
  height: 36
  size_hint_y: None
  BoxLayout:
    orientation: "horizontal"
    Button:
      size_hint_x: None
      width: self.height
      font_name: "fonts/Font Awesome 6 Free-Solid-900.otf"
      font_size: 21
      text: "\uf129"
#      on_release: Factory.Wifi().open()
    Label:
      size_hint_x: 0.7
      text: root.name
    Button:
      size_hint_x: None
      width: 250
      text: str(root.value)
      on_release: Factory.Keypad().show(root, 'value')

<DualNumberItem>:
  value: 0
  height: 36
  size_hint_y: None
  BoxLayout:
    orientation: "horizontal"
    Button:
      size_hint_x: None
      width: self.height
      font_name: "fonts/Font Awesome 6 Free-Solid-900.otf"
      font_size: 21
      text: "\uf129"
#      on_release: Factory.Wifi().open()

    Label:
      size_hint_x: 0.6
      text: root.name
    TextInput:
      size_hint_x: None
      width: 125
      multiline: False
      text: str(root.value / root.ratio)
      on_text_validate: root.validate_first(self.text)
    TextInput:
      size_hint_x: None
      width: 125
      multiline: False
      text: str(root.value)
      on_text_validate: root.validate_second(self.text)

<ScalePanel>:
  orientation: "vertical"
  StringItem:
    name: "Axis Name"
    value: root.scale.axis_name
    on_value: root.scale.axis_name = self.value
  NumberItem:
    name: "Ratio Numerator"
    value: root.scale.ratio_num
    on_value: root.scale.ratio_num = self.value
  NumberItem:
    name: "Ratio Denominator"
    value: root.scale.ratio_den
    help_file: "scales.rst"
    on_value: root.scale.ratio_den = self.value
  NumberItem:
    name: "Sync Ratio Numerator"
    value: root.scale.sync_ratio_num
    help_file: "scales.rst"
    on_value: root.scale.sync_ratio_num = self.value
  NumberItem:
    name: "Sync Ratio Denominator"
    value: root.scale.sync_ratio_den
    on_value: root.scale.sync_ratio_den = self.value
  BoxLayout:
    orientation: "vertical"

<ServoPanel>:
  orientation: "vertical"
  NumberItem:
    name: "Minimum Speed"
    value: root.servo.min_speed
    on_value: root.servo.min_speed = self.value
  DualNumberItem:
    name: "Maximum Speed"
    value: root.servo.max_speed
    ratio: root.servo.ratio_den / root.servo.ratio_num
    on_value: root.servo.max_speed = self.value
  DualNumberItem:
    name: "Acceleration"
    value: root.servo.acceleration
    ratio: root.servo.ratio_den / root.servo.ratio_num
    on_value: root.servo.acceleration = self.value
  NumberItem:
    name: "Ratio Numerator"
    value: root.servo.ratio_num
    on_value: root.servo.ratio_num = self.value
  NumberItem:
    name: "Ratio Denominator"
    value: root.servo.ratio_den
    on_value: root.servo.ratio_den = self.value
  NumberItem:
    name: "Offset"
    value: root.servo.offset
    on_value: root.servo.offset = self.value
  NumberItem:
    name: "Divisions"
    value: root.servo.divisions
    on_value: root.servo.divisions = self.value
  NumberItem:
    name: "Index"
    value: root.servo.index
    on_value: root.servo.index = self.value
  BoxLayout:
    orientation: "vertical"

<LogsPanel>:
  orientation: "vertical"
  BoxLayout:
    orientation: "horizontal"
    size_hint_y: None
    height: 32
    Label:
      size_hint_y: 1
      font_size: self.height * 0.75
      text: "Application Logs"
    Button:
      size_hint_x: None
      width: 200
      text: "Refresh"
      on_release: root.refresh_logs()

  ScrollView:
    do_scroll_x: False
    do_scroll_y: True
    Label:
      id: log_text_area
      size_hint_y: None
      height: self.texture_size[1]
      text_size: self.width, None
      padding: 10, 10

<Setup>:
  title: "Setup"
  size_hint: 0.9, 0.9
  auto_dismiss: False
  tabbed_panel: tabbed_panel

  BoxLayout:
    orientation: "vertical"
    TabbedPanel:
      do_default_tab: False
      id: tabbed_panel
    BoxLayout:
      size_hint_y: None
      height: 48
      orientation: "horizontal"

      Button:
#        font_name: "fonts/Font Awesome 6 Free-Solid-900.otf"
        text: "UI Settings"
        on_release: app.open_custom_settings()
      Button:
        font_name: "fonts/Font Awesome 6 Free-Solid-900.otf"
        text: "\uf00c"
        background_color: "#349e65"
        on_release: root.dismiss()