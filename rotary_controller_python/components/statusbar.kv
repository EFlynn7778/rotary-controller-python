#: import LedButton components.ledbutton

<StatusBar>:
  size_hint_x: 1
  size_hint_y: None
  height: 32
  orientation: "horizontal"

  LedButton:
    # Communication Alarm
    size_hint_x: None
    width: 64
    label: "COM"
    checkbox_value: app.connected or app.blink

  LedButton:
    # READY LED
    size_hint_x: None
    valign: "top"
    width: 64
    label: "ENA"
    checkbox_value: app.connected

#  LedButton:
#    # INT.CYCLES
#    size_hint_x: None
#    width: 64
#    label: str(int(root.max_speed))

  LedButton:
    # INTERRUPT INTERVAL
    size_hint_x: None
    width: 128
    label: "{:0.0f}".format(0 if root.interval == 0 else (100000000 / root.interval))

  LedButton:
    # CURRENT SERVO SPEED
    size_hint_x: None
    width: 64
    label: str(int(root.speed))

  LedButton:
    # FPS
    size_hint_x: None
    width: 64
    label: str(int(root.fps))

  LedButton:
    # CYCLES
    size_hint_x: None
    width: 64
    label: str(root.cycles)

  ProgressBar:
    max: int(root.max_speed)
    value: int(root.speed)
