#: import LedButton components.ledbutton

<StatusBar>:
  size_hint_x: 1
  size_hint_y: None
  height: 32
  orientation: "horizontal"

  LedButton:
    # Communication Alarm
    height: self.width
    size_hint_x: None
    width: 64
    label: "COM"
    checkbox_value: app.connected or app.blink

  LedButton:
    # READY LED
    height: self.width
    size_hint_x: None
    valign: "top"
    width: 64
    label: "RDY"
    checkbox_value: app.connected

  LedButton:
    # RUN SYN LED
    height: self.width
    size_hint_x: None
    width: 64
    label: "SYN"
#    checkbox_value: app.mode == 20

  LedButton:
    # RUN INDEX LED
    height: self.width
    size_hint_x: None
    width: 64
    label: "IDX"
#    checkbox_value: app.mode == 10

  LedButton:
    # RUN JOG LED
    height: self.width
    size_hint_x: None
    width: 64
    label: "JOG"
#    checkbox_value: app.mode >= 30 and app.mode < 40

  LedButton:
    # SPEED
    height: self.width
    size_hint_x: None
    width: 64
    label: str(int(root.speed))
#    checkbox_value: app.mode == 32

  LedButton:
    # FPS
    height: self.width
    size_hint_x: None
    width: 64
    label: str(int(root.fps))
#    checkbox_value: app.mode == 31

  LedButton:
    # CYCLES
    height: self.width
    size_hint_x: None
    width: 64
    label: str(root.cycles)
#    checkbox_value: app.mode >= 100
