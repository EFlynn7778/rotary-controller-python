#: import LedButton components.ledbutton

<StatusBar>:
  size_hint_x: 1
  size_hint_y: None
  height: 32
  orientation: "horizontal"

  LedButton:
    # Communication Alarm
    size_hint_x: None
    width: 64
    label: "COM"
    checkbox_value: app.connected or app.blink

#  LedButton:
#    # READY LED
#    size_hint_x: None
#    valign: "top"
#    width: 64
#    label: "RDY"
#    checkbox_value: app.connected

  LedButton:
    # INT.CYCLES
    size_hint_x: None
    width: 64
    label: str(int(root.max_speed))


  LedButton:
    # INT.CYCLES
    size_hint_x: None
    width: 64
    label: str(int(root.interval))

  LedButton:
    # SPEED
    size_hint_x: None
    width: 64
    label: str(int(root.speed))

  LedButton:
    # FPS
    size_hint_x: None
    width: 64
    label: str(int(root.fps))

  LedButton:
    # CYCLES
    size_hint_x: None
    width: 64
    label: str(root.cycles)

  ProgressBar:
    max: int(root.max_speed)
    value: int(root.speed)
