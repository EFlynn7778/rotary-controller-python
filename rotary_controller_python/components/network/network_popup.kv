<NetworkPopup>:
  title: "Network Settings"
  size_hint: 0.8, 0.8
  auto_dismiss: False

  device: device
  dhcp: dhcp
  address: address
  netmask: netmask
  gateway: gateway
  wpa_ssid: wpa_ssid
  wpa_psk: wpa_psk
  status_text: status_text

  BoxLayout:
    orientation: "vertical"

    BoxLayout:
      size_hint_y: None
      height: 32
      orientation: "horizontal"
      Label:
        size_hint_x: 0.4
        text: "Device"
      TextInput:
        id: device

    BoxLayout:
      size_hint_y: None
      height: 32
      orientation: "horizontal"
      Label:
        size_hint_x: 0.4
        text: "Wireless Network"
      BoxLayout:
        orientation: "horizontal"
        TextInput:
          id: wpa_ssid

    BoxLayout:
      size_hint_y: None
      height: 32
      orientation: "horizontal"
      Label:
        size_hint_x: 0.4
        text: "Wireless Password"
      BoxLayout:
        orientation: "horizontal"
        TextInput:
          id: wpa_psk
          password: True

    BoxLayout:
      size_hint_y: None
      height: 32
      orientation: "horizontal"
      Label:
        size_hint_x: 0.4
        text: "DHCP"

      Button:
        id: dhcp
        pressed: False
        font_size: 24
        font_style: "bold"
        background_color: [0.2, 1, 0.2, 1] if self.pressed else [1, 0.2, 0.2, 1]
        text: "ON" if self.pressed else "OFF"
        on_release: self.pressed = False if self.pressed else True

    BoxLayout:
      size_hint_y: None
      height: 32
      orientation: "horizontal"
      disabled: True if root.dhcp.pressed else False
      Label:
        size_hint_x: 0.4
        text: "Address"
      BoxLayout:
        orientation: "horizontal"
        TextInput:
          id: address
        TextInput:
          id: netmask
          size_hint_x: None
          width: 40


    BoxLayout:
      size_hint_y: None
      height: 32
      orientation: "horizontal"
      disabled: True if root.dhcp.pressed else False
      Label:
        size_hint_x: 0.4
        text: "Gateway"
      BoxLayout:
        orientation: "horizontal"
        TextInput:
          id: gateway

    BoxLayout:
      orientation: "horizontal"

    BoxLayout:
      size_hint_y: None
      height: 64
      orientation: "horizontal"
      Label:
        size_hint_x: 0.3
        text: "Status:"
      TextInput:
        readonly: True
        multiline: True
        id: status_text
        text: "Ready"

    BoxLayout:
      size_hint_y: None
      height: 48
      orientation: "horizontal"

      Button:
        text: "Test"
        background_color: "#cf3a3a"
        on_release: root.test_configuration()
      Button:
        font_name: "fonts/Font Awesome 6 Free-Solid-900.otf"
        text: "\uf00d"
        background_color: "#cf3a3a"
        on_release: root.cancel()
      Button:
        font_name: "fonts/Font Awesome 6 Free-Solid-900.otf"
        text: "\uf00c"
        background_color: "#349e65"
        on_release: root.confirm()