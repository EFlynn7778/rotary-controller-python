#: import Factory kivy.factory.Factory
#: import Keypad components.keypad
#: import ImageButton components.toolbars.image_button

<CoordBar>:
  orientation: "horizontal"
  size_hint_y: 1
  Button:
    width: 96
    size_hint_x: None
    text: root.scale.axisName
    font_size: self.height / 1.5
    background_color: [0.2, 1, 0.2, 1] if root.scale.syncEnable else [0.3, 0.3, 0.3, 1]
    on_release: root.scale.toggle_sync()

  BoxLayout:
    orientation: "horizontal"
    BoxLayout:
      size_hint_x: 0.5
      orientation: "vertical"
      Button:
        background_color: (0, 0, 0, 1)
        id: pos_label
        size_hint_y: 0.7
        font_name: "fonts/iosevka-regular.ttf"
        font_size: self.height / 1.5
        font_style: "bold"
        color: app.formats.display_color
        text: root.scale.formattedPosition
        text_size: self.size
        halign: 'right'
        valign: 'center'
        on_release: root.update_position()
      Label:
        size_hint_y: 0.3
        font_name: "fonts/iosevka-regular.ttf"
        font_size: self.height / 1.5
        font_style: "bold"
        color: app.formats.display_color
        text: root.scale.formattedSpeed
        text_size: self.size
        halign: 'right'
        valign: 'top'

    BoxLayout:
      size_hint_x: None
      width: 100
      orientation: 'vertical'
      Label:
        text: "Num"
        font_size: self.height / 1.5
        size_hint_y: 0.3
        color: app.formats.display_color
        halign: 'center'
        valign: 'top'
      Button:
        size_hint_y: 0.7
        font_name: "fonts/iosevka-regular.ttf"
        font_size: self.height / 2
        font_style: "bold"
        background_color: [0.3, 0.3, 0.3, 1]
        color: app.formats.display_color
        text: str(int(root.scale.syncRatioNum))
        text_size: self.size
        halign: 'center'
        valign: 'middle'
        on_release: Factory.Keypad().show(root.scale, 'syncRatioNum')

    BoxLayout:
      size_hint_x: None
      width: 100
      orientation: 'vertical'
      Label:
        text: "Den"
        font_size: self.height / 1.5
        size_hint_y: 0.3
        color: app.formats.display_color
        halign: 'center'
        valign: 'top'
      Button:
        size_hint_y: 0.7
        font_name: "fonts/iosevka-regular.ttf"
        font_size: self.height / 2
        font_style: "bold"
        background_color: [0.3, 0.3, 0.3, 1]
        color: app.formats.display_color
        text: str(int(root.scale.syncRatioDen))
        text_size: self.size
        halign: 'center'
        valign: 'middle'
        on_release: Factory.Keypad().show(root.scale, 'syncRatioDen')

  ImageButton:
#    text: "Zero"
    source: "pictures/zero-icon-white.png"
    font_size: 24
    font_style: "bold"
    background_color: [0.5, 0.5, 0.5, 1]
    width: self.height
    size_hint_x: None
    on_release: root.scale.zero_position()
