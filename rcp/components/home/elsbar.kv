#: import Factory kivy.factory.Factory
#: import Keypad components.keypad
#: import FeedsTablePopup components.home.feeds_table_popup

<ElsBar>:
  orientation: "horizontal"
  size_hint_y: None
  height: 100

  Button:
    width: 96
    size_hint_x: None
    text: "P"
    font_size: self.height / 1.5
    font_style: "bold"
    background_color: [0.2, 1, 0.2, 1] if app.servo.servoEnable else [0.3, 0.3, 0.3, 1]
    on_release: app.servo.toggle_enable()
  
  # Pitch buttons
  Button:
    width: 70
    size_hint_x: None
    background_color: [0.5, 0.5, 0.5, 1]
    font_name: "fonts/Font Awesome 6 Free-Solid-900.otf"
    text: "\uf060"
    text_halign: "center"
    font_size: self.height / 4
    font_style: "bold"
    halign: "center"
    on_release: root.previous_feed()

  BoxLayout:
    width: self.height
    size_hint_x: None
    orientation: 'vertical'
    Label:
      text: "Pitch"
      font_size: self.height / 1.5
      size_hint_y: 0.3
      #color: app.formats.display_color
      halign: 'center'
      valign: 'top'
    Button:
      size_hint_y: 0.7
      font_name: "fonts/iosevka-regular.ttf"
      font_size: self.height / 2
      font_style: "bold"
      background_color: [0.0, 0.0, 0.0, 1]
      color: [0.0, 0.8, 0.5, 1]
      text: root.feed_name
      text_size: self.size
      halign: 'center'
      valign: 'middle'
      on_release: Factory.FeedsTablePopup().show_with_callback(root.set_feed_ratio)

  Button:
    width: 70
    size_hint_x: None
    background_color: [0.5, 0.5, 0.5, 1]
    font_name: "fonts/Font Awesome 6 Free-Solid-900.otf"
    text: "\uf061"
    text_halign: "center"
    font_size: self.height / 4
    font_style: "bold"
    halign: "center"
    on_release: root.next_feed()

  BoxLayout:
    orientation: "vertical"
    size_hint_x: 0.8
    Label:
      text: "Position"
      text_size: self.size
      size_hint_y: 0.15
      font_size: 16
      halign: 'center'
      valign: 'top'

    Button:
      size_hint_y: 0.30
      font_name: "fonts/iosevka-regular.ttf"
      font_size: self.height / 2
      font_style: "bold"
      color: [0.0, 0.8, 0.5, 1]
      background_color: [0.0, 0.0, 0.0, 1]
      text: app.servo.formattedPosition
      text_size: self.size
      halign: 'center'
      valign: 'middle'
      #disabled: app.servo.disableControls
      on_release: app.servo.update_current_position()


  # Add thread length controls
  BoxLayout:
    orientation: "vertical"
    width: 170
    size_hint_x: None
    
    Label:
      text: "Thread Length"
      font_size: self.height / 1.5
      size_hint_y: 0.3
      halign: 'center'
      valign: 'top'

    Button:
      text: "{:.2f} {}".format(root.thread_length, app.formats.current_format)
      size_hint_y: 0.7
      font_name: "fonts/iosevka-regular.ttf"
      font_size: self.height / 2
      font_style: "bold"
      background_color: [0.0, 0.0, 0.0, 1]
      color: [0.0, 0.8, 0.5, 1]
      text_size: self.size
      halign: 'center'
      valign: 'middle'
      on_release: root.show_thread_length_keypad()
    
      
  # Add thread cycle control button  
  Button:
    width: 120
    size_hint_x: None
    text: "Start" if not root.cycle_active else ("Next" if root.cycle_state == 2 else "Stop")
    font_size: self.height / 4
    background_color: app.formats.accept_color if not root.cycle_active or root.cycle_state == 2 else app.formats.cancel_color
    on_release: root.start_thread_cycle() if not root.cycle_active or root.cycle_state == 2 else root.stop_thread_cycle()

