<ToolbarButton>:
  size_hint_y: None
  height: 64
  font_size: 16
  font_name: "fonts/Manrope-Bold.ttf"

<Toolbar>:
  current_units: app.current_units

  size_hint_x: None
  size_hint_y: 1
  width: 64
  orientation: "vertical"

  ToolbarButton:
    font_name: "fonts/Font Awesome 6 Free-Solid-900.otf"
    font_size: 32
    text: "\uf085"
    id: settings_button
    on_release: Factory.AppSettings().open()
  ToolbarButton:
    text: "mm"
    id: test_button
#    on_release: Factory.Keypad().show(app.setter("desired_angle"))

  ToolbarButton:
    text: "ABS"
    id: test_button
#    on_release: Factory.Keypad().show(app.setter("desired_angle"))
  ToolbarButton:
    text: "DIV"
    id: test_button
    on_release: app.test_sync()
