#: import Factory kivy.factory.Factory
#: import Keypad components.keypad
#: import AppSettings components.appsettings


<ToolbarButton>:
  size_hint_y: None
  height: self.width
  font_size: 16
  font_name: "fonts/Manrope-Bold.ttf"

<Toolbar>:
  current_units: app.current_units

  size_hint_x: None
  size_hint_y: 1
  width: 80
  orientation: "vertical"

  ToolbarButton:
    background_color: (1, 0, 0, 1)
    disabled: False
    text: "RST"
    state: "normal"

  ToggleButton:
    background_color: (1, 0, 0, 1)
    disabled: False
    state: app.ready_state
    text: "STA"


  ToggleButton:
    text: "ALM"
    active: app.alarm

  ToolbarButton:
    text: "mm"

  ToolbarButton:
    text: "ABS"

  ToolbarButton:
    font_name: "fonts/Font Awesome 6 Free-Solid-900.otf"
    font_size: 32
    text: "\uf085"

    on_release: Factory.AppSettings().open()
