#: import Factory kivy.factory.Factory
#: import Keypad components.keypad

<RotaryBar>:
  pos_format: app.angle_format

  orientation: "vertical"
  canvas.before:
    Color:
      rgba: (0,0,0,1)
    Rectangle:
      pos: self.pos
      size: self.size
  BoxLayout:
    orientation: "horizontal"
    height: 80
    size_hint_y: None
    BoxLayout:
      orientation: "horizontal"
      BoxLayout:
        size_hint_x: 0.4
        orientation: "vertical"
        Label:
          text: "Current Angle"
          text_size: self.size
          size_hint_y: 0.3
          font_size: 16
          color: app.display_color
          halign: 'left'
          valign: 'bottom'
        Button:
          id: current_angle_button
          background_color: 0.1, 0.1, 0.1, 1
          font_name: "fonts/Manrope-Bold.ttf"
          font_size: 48
          font_style: "bold"
          color: app.display_color
          text: root.pos_format.format(app.current_position)
          text_size: self.size
          halign: 'left'
          valign: 'bottom'
          on_release: Factory.Keypad().show(app.set_current_position)
          disabled: app.in_motion
      BoxLayout:
        size_hint_x: 0.4
        orientation: "vertical"
        Label:
          text: "Desired Angle"
          text_size: self.size
          size_hint_y: 0.3
          font_size: 16
          color: app.display_color
          halign: 'left'
          valign: 'bottom'
        Button:
          id: desired_angle_button
          background_color: 0.1, 0.1, 0.1, 1
          font_name: "fonts/Manrope-Bold.ttf"
          font_size: 48
          font_style: "bold"
          color: app.display_color
          text: root.pos_format.format(app.desired_position)
          text_size: self.size
          halign: 'left'
          valign: 'bottom'
          on_release: Factory.Keypad().show(app.set_desired_position)
          disabled: app.in_motion
    BoxLayout:
      canvas.before:
        Color:
          rgba: (0.3, 0.1, 0.1, 1)
        Rectangle:
          pos: self.pos
          size: self.size
      size_hint_x: None
      width: 160
      orientation: "vertical"
      Label:
        size_hint_y: 0.3
        text: "Motion Enable"
      Switch:
        active: app.motion_enable
        on_active: app.motion_enable = self.active

  BoxLayout:
    size_hint_y: None
    height: 80
    orientation: "horizontal"

    Button:
      font_name: "fonts/Font Awesome 6 Free-Solid-900.otf"
      text: "\uf068"
      font_size: 48
      font_style: "bold"
      background_color: [0.2, 0.8, 0.2, 1]
      width: 80
      size_hint_x: None
      on_release: app.division_index = (app.division_index - 1 + app.divisions) % app.divisions
      disabled: app.in_motion

    BoxLayout:
      size_hint_x: 0.5
      orientation: "vertical"
      Label:
        text: "Index"
        text_size: self.size
        size_hint_y: 0.3
        font_size: 16
        color: app.display_color
        halign: 'left'
        valign: 'bottom'
      Button:
        background_color: 0.1, 0.1, 0.1, 1
        font_name: "fonts/Manrope-Bold.ttf"
        font_size: 48
        font_style: "bold"
        color: app.display_color
        text: str(int(app.division_index))
        text_size: self.size
        halign: 'left'
        on_release: Factory.Keypad().show(app.set_division_index)
        disabled: app.in_motion
    BoxLayout:
      size_hint_x: 0.5
      orientation: "vertical"
      Label:
        text: "Divisions"
        text_size: self.size
        size_hint_y: 0.3
        font_size: 16
        color: app.display_color
        halign: 'left'
        valign: 'bottom'
      Button:
        background_color: 0.1, 0.1, 0.1, 1
        font_name: "fonts/Manrope-Bold.ttf"
        font_size: 48
        font_style: "bold"
        color: app.display_color
        text: str(int(app.divisions))
        text_size: self.size
        halign: 'left'
        on_release: Factory.Keypad().show(app.set_divisions)
        disabled: app.in_motion
    BoxLayout:
      size_hint_x: 0.5
      orientation: "vertical"
      Label:
        text: "Offset"
        text_size: self.size
        size_hint_y: 0.3
        font_size: 16
        color: app.display_color
        halign: 'left'
        valign: 'bottom'
      Button:
        background_color: 0.1, 0.1, 0.1, 1
        font_name: "fonts/Manrope-Bold.ttf"
        font_size: 48
        font_style: "bold"
        color: app.display_color
        text: root.pos_format.format(app.division_offset)
        text_size: self.size
        halign: 'left'
        on_release: Factory.Keypad().show(app.set_division_offset)
        disabled: app.in_motion
    Button:
      font_name: "fonts/Font Awesome 6 Free-Solid-900.otf"
      text: "\u002b"
      font_size: 48
      font_style: "bold"
      background_color: [0.2, 0.8, 0.2, 1]
      width: 80
      size_hint_x: None
      on_release: app.division_index = (app.division_index+1) % app.divisions
      disabled: app.in_motion
