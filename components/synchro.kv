#: import Factory kivy.factory.Factory
#: import Keypad components.keypad
#: import LabelButton components.labelbutton
#: import LedButton components.ledbutton

<Synchro>:
  axis_name: "A"
  orientation: "vertical"
  canvas.before:
    Color:
      rgba: (0,0,0,1)
    Rectangle:
      pos: self.pos
      size: self.size
  BoxLayout:
    orientation: "horizontal"
    height: 80
    size_hint_y: None
    Label:
      text: root.axis_name
      width: 80
      size_hint_x: None
      font_size: 64
      font_style: "bold"
    LabelButton:
      label: "Current Position (deg)"
      text_halign: "center"
      format: app.angle_format
      value: app.current_position
      release_function: app.set_current_position
    Button:
      text: "Zero"
      font_size: 24
      font_style: "bold"
      background_color: [1, 0.2, 0.2, 1]
      width: 80
      size_hint_x: None
      on_release: root.axis_pos = "0"

  BoxLayout:
    orientation: "horizontal"
    height: 80
    size_hint_y: None
    LabelButton:
      label: "Numerator"
      format: "{}"
      value: app.syn_ratio_num
      release_function: app.set_sync_numerator
    LabelButton:
      label: "Denominator"
      format: "{}"
      value: app.syn_ratio_den
      release_function: app.set_sync_denominator
    Button:
      background_color: (0, 1, 0, 1)
      size_hint_x: None
      width: self.height
      text: "Request\nSynchro"
      text_halign: "center"
      on_release: app.request_syn_mode()
