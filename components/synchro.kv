#: import Factory kivy.factory.Factory
#: import Keypad components.keypad
#: import LabelButton components.labelbutton

<Synchro>:
  orientation: "vertical"
  canvas.before:
    Color:
      rgba: (0,0,0,1)
    Rectangle:
      pos: self.pos
      size: self.size
  BoxLayout:
    orientation: "horizontal"
    height: 80
    size_hint_y: None
    LabelButton:
      label: "Current Position (deg)"
      format: app.angle_format
      value: app.current_position
      release_function: app.set_current_position

    BoxLayout:
      canvas.before:
        Color:
          rgba: (0.3, 0.1, 0.1, 1)
        Rectangle:
          pos: self.pos
          size: self.size
      size_hint_x: None
      width: 160
      orientation: "vertical"
      Label:
        size_hint_y: 0.3
        text: "Test"


  BoxLayout:
    orientation: "horizontal"
    height: 80
    size_hint_y: None
    LabelButton:
      label: "Numerator"
      format: "{}"
      value: app.sync_numerator
      release_function: app.set_sync_numerator
    LabelButton:
      label: "Denominator"
      format: "{}"
      value: app.sync_denominator
      release_function: app.set_sync_denominator
