#: import Factory kivy.factory.Factory
#: import Keypad components.keypad
#: import appsettings components

<CoordBar>:
  axis_name: "X"
  axis_pos: 0
  axis_speed: 0
  formatted_axis_pos: ""
  formatted_axis_speed: ""

  metric_pos_format: app.metric_pos_format
  metric_speed_format: app.metric_speed_format
  imperial_pos_format: app.imperial_pos_format
  imperial_speed_format: app.imperial_speed_format

  current_units: app.current_units

  orientation: "horizontal"
  height: 80
  size_hint_y: None
  Label:
    text: root.axis_name
    width: self.height
    size_hint_x: None
    font_size: 64
    font_style: "bold"
  BoxLayout:
    orientation: "horizontal"
    BoxLayout:
      size_hint_x: 0.5
      orientation: "vertical"
      Button:
        background_color: (0, 0, 0, 1)
        id: pos_label
        size_hint_y: 0.7
        font_name: "fonts/iosevka-regular.ttf"
        font_size: 48
        font_style: "bold"
        color: app.display_color
        text: root.formatted_axis_pos
        text_size: self.size
        halign: 'right'
        valign: 'center'
        on_release: Factory.Keypad().show(root.release_function)
      Label:
        size_hint_y: 0.3
        font_name: "fonts/iosevka-regular.ttf"
        font_size: 16
        font_style: "bold"
        color: app.display_color
        text: root.formatted_axis_speed
        text_size: self.size
        halign: 'right'
        valign: 'top'

    BoxLayout:
      size_hint_x: 0.20
      orientation: 'vertical'
      Label:
        text: "Num"
        text_size: self.size
        size_hint_y: 0.3
        font_size: 16
        color: app.display_color
        halign: 'center'
        valign: 'top'
      Button:
        size_hint_y: 0.7
        font_name: "fonts/iosevka-regular.ttf"
        font_size: 32
        font_style: "bold"
        background_color: [0.2, 0.2, 0.2, 1]
        color: app.display_color
        text: "100"
        text_size: self.size
        halign: 'center'
        valign: 'middle'

    BoxLayout:
      size_hint_x: 0.20
      orientation: 'vertical'
      Label:
        text: "Den"
        text_size: self.size
        size_hint_y: 0.3
        font_size: 16
        color: app.display_color
        halign: 'center'
        valign: 'top'
      Button:
        size_hint_y: 0.7
        font_name: "fonts/iosevka-regular.ttf"
        font_size: 32
        font_style: "bold"
        background_color: [0.2, 0.2, 0.2, 1]
        color: app.display_color
        text: "100"
        text_size: self.size
        halign: 'center'
        valign: 'middle'

    BoxLayout:
      size_hint_x: 0.10
      orientation: 'vertical'
      Label:
        text: "SYNC"
        text_size: self.size
        size_hint_y: 0.3
        font_size: 16
        color: app.display_color
        halign: 'center'
        valign: 'top'
      ToggleButton:
        text: "ON"

  Button:
    text: "Zero"
    font_size: 24
    font_style: "bold"
    background_color: [1, 0.2, 0.2, 1]
    width: self.height
    size_hint_x: None
    on_release: root.release_function(0)
