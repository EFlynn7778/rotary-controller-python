#: import Toolbar components.toolbar
#: import CoordBar components.coordbar
#: import DirectIndexing components.directindexing
#: import Jog components.jog
#: import Synchro components.synchro
#: import StatusBar components.statusbar
<Home>:
  orientation: "horizontal"
  Toolbar:
    id: toolbar
  BoxLayout:
    orientation: "vertical"
    StatusBar:
    CoordBar:
      release_function: app.set_new_x
      input_name: "x_axis"
      axis_name: "X"
#    CoordBar:
#      release_function: app.set_new_x
#      axis_name: "X"
#      axis_pos: app.x_axis
    CoordBar:
      release_function: app.set_new_y
      axis_name: "Y"
      axis_pos: app.y_axis
      disabled: True
    CoordBar:
      release_function: app.set_new_z
      axis_name: "Z"
      axis_pos: app.z_axis
      disabled: True
    TabbedPanel:
      do_default_tab: False
      tab_pos: "bottom_left"
      tab_width: 140
      TabbedPanelItem:
        text: "Indexing"
        Label:
          canvas.before:
            Color:
              rgba: (0, 0, 0, 1)
            Rectangle:
              pos: self.pos
              size: self.size
        DirectIndexing:
          id: rotary_a
          input_name: "current_position"
          axis_name: "A"
      TabbedPanelItem:
        text: "Axis Syncro"
        Label:
          canvas.before:
            Color:
              rgba: (0, 0, 0, 1)
            Rectangle:
              pos: self.pos
              size: self.size
        Synchro:
      TabbedPanelItem:
        text: "Jog"
        Label:
          canvas.before:
            Color:
              rgba: (0, 0, 0, 1)
            Rectangle:
              pos: self.pos
              size: self.size
        Jog:

BoxLayout:
  orientation: "vertical"
  Home:
    id: home