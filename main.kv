#: import Toolbar components.toolbar
#: import CoordBar components.coordbar
#: import RotaryBar components.rotarybar
#: import Jog components.jog
<Home>:
  orientation: "horizontal"
  Toolbar:
    id: toolbar
  BoxLayout:
    orientation: "vertical"
    CoordBar:
      id: x_coords
      input_name: "x_axis"
      axis_name: "X"
    CoordBar:
      id: x_coords
      input_name: "y_axis"
      axis_name: "Y"
    CoordBar:
      id: x_coords
      input_name: "z_axis"
      axis_name: "Z"
    TabbedPanel:
      do_default_tab: False
      tab_pos: "bottom_left"
      tab_width: 140
      TabbedPanelItem:
        text: "Indexing"
        Label:
          canvas.before:
            Color:
              rgba: (0, 0, 0, 1)
            Rectangle:
              pos: self.pos
              size: self.size
        RotaryBar:
          id: rotary_a
          input_name: "current_position"
          axis_name: "A"
      TabbedPanelItem:
        text: "Axis Syncro"
        Label:
          canvas.before:
            Color:
              rgba: (0, 0, 0, 1)
            Rectangle:
              pos: self.pos
              size: self.size
          text: "Abs Mode"
      TabbedPanelItem:
        text: "Jog"
        Label:
          canvas.before:
            Color:
              rgba: (0, 0, 0, 1)
            Rectangle:
              pos: self.pos
              size: self.size
        Jog:

BoxLayout:
  orientation: "vertical"
  Home:
    id: home